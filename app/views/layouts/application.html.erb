<!DOCTYPE html>
<html>
<head>
  <title>Oracle SRM Sample App</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag "//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" %>
  <%= stylesheet_link_tag "//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<div class="header">
  <%=image_tag 'oracle-logo.png' %>
</div>
<div class="container">

  <nav>
    <ul class="nav nav-tabs">
      <li class="active"><a href="<%= root_path %>" style="cursor:pointer;">Messages</a></li>
      <li>
        <div class="auth">
          <% if current_token %>
            <a class="badge" onclick="$('#login_spinner').toggleClass('hidden');return true;" href="<%= delete_token_path %>">Logout</a>
          <% else %>
            <%= render 'layouts/auth' %>
          <% end %>
          <%=image_tag 'spinner.gif', :id => 'login_spinner', :class => 'hidden' %>
        </div>
      </li>
    </ul>
  </nav>

  <% if flash[:error] %>
    <div class="flash-error"><%=flash[:error]%></div>
  <% elsif flash[:success] %>
    <div class="flash-success"><%=flash[:success]%></div>
  <% end %>

  <%= yield %>

</div>

</body>
</html>
